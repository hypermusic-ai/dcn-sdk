{
  "name": "@hypermusic-ai/dcn-js",
  "version": "0.1.0",
  "description": "Decentralized Creative Network JavaScript/TypeScript SDK",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": ["dist", "README.md", "LICENSE"],
  "scripts": {
    "clean": "rimraf dist src/generated",
    "codegen": "tsx scripts/codegen.ts",
    "build": "tsup src/index.ts --dts --format esm,cjs --sourcemap",
    "prepack": "npm run clean && npm run codegen && npm run build",
    "test": "vitest run"
  },
  "dependencies": {
    "ethers": "^6.13.2"
  },
  "devDependencies": {
    "openapi-typescript-codegen": "^0.29.0",
    "tsup": "^8.1.0",
    "typescript": "^5.6.3",
    "tsx": "^4.16.2",
    "vitest": "^2.1.3",
    "rimraf": "^6.0.1"
  },
  "vitest": {
    "setupFiles": ["test/setup.ts"]
  }
}

